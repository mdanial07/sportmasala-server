    <style>
        body {
            margin: 0;
        }

        .Header {
            background-color: #c100f1;
            background-image: -webkit-linear-gradient(360deg, #b000dc 18%, #ae00a0 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 150px;
        }

        .Header img {
            width: 125px;
            height: 125px;
            margin: auto;
        }

        .Footer {
            margin: auto;
            width: 100%;
            background-color: #c100f1;
            background-image: -webkit-linear-gradient(360deg, #b000dc 18%, #ae00a0 100%);
            color: #fff;
            text-align: center;
            padding: 15px 0;
        }

        .Footer .Icons {
            width: max-content;
            margin: auto;
        }

        .Footer .Icons img {
            width: 30px;
            height: 30px;
            padding: 15px 10px;
        }

        .Main {
            padding: 20px;
        }

        .Main .Name {
            font-size: 22px;
        }

        .Main .Name span {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="Header">
        <img src="https://res.cloudinary.com/dowrjiwpe/image/upload/v1615635540/E-Booket/fulllogo.png" alt="logo">
    </div>
    <div class="Main">
        <div class="Name">
            Hi,
            <span>
                <%= user.name %>
            </span>
        </div>
        <div>
            <div>Thank you for joining us.</div>
            <div>Please click on the following link in order to login your account.</div>
            <p>
                Link:
                <a href="<%= emailVerificationLink %>">
                    <%= emailVerificationLink %>
                </a>
            </p>
            <h3>Login Credentials</h3>
            <div>Email: <%= user.email %>
            </div>
            <div>password: <%= user.password %>
            </div>

            <br> 

            <div>Thanks</div>
            <div>Team E-Booket</div>
            <div>+92 332 0302578</div>
        </div>
    </div>
    <div class="Footer">
        <div class="Icons">
            <a href="https://www.facebook.com/ebooket" target="_blank">
                <img src="https://res.cloudinary.com/dowrjiwpe/image/upload/v1615635539/E-Booket/fb.png" alt="fb">
            </a>
            <a href="https://www.instagram.com/ebooket.pk" target="_blank">
                <img src="https://res.cloudinary.com/dowrjiwpe/image/upload/v1615635539/E-Booket/ig.png" alt="ig">
            </a>
        </div>
        <span>Powered by Ebooket</span>
    </div>
</body>

